@model DomainModel.Questions

@{
    ViewBag.Title = "Отзывы и предложения";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Изменение отзыва</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {

        <div class="form-horizontal">
            <h4>Пожалуйста, заполните все поля</h4>
            <hr />

            <div class="form-group">
                <p class="control-label col-md-2"> Отзыв </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Question, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-2"> Имя пользователя </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-2"> Электронная почта </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserMail, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Сохранить изменения" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Перейти к списку отзывов", "Index")
    </div>
</body>
</html>



